        "_id": {
          "type": "string",
          "uniqueItems": true
        },
        "oznaka": {
          "type": "string"
        },

        "lokacija": {
          "type": "string"
        },
        "namen": {
          "type": "string"
        },
        "prost": {
          "type": "boolean"
        }
      }
    },
    "SpaceWoID": {
      "required": ["oznaka", "lokacija", "namen", "prost"],
      "properties": {
        "oznaka": {
          "type": "string"
        },

        "lokacija": {
          "type": "string"
        },
        "namen": {
          "type": "string"
        },
        "prost": {
          "type": "boolean"
        }
      }
    },
    "Spaces": {
      "type": "array",
